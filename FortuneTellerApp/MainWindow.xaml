<Window x:Class="FortuneTellerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🔮 Ворожка"
        Width="600" Height="500" MinWidth="400" MinHeight="400"
        Background="#E6E6FA" FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="A:\study\materials\3kurs\3.2\Декларативне програмування графічних інтерфейсів\GraphI\FortuneTellerApp\Images\fortune.png" Grid.Row="0"
               MaxWidth="200" Stretch="Uniform"
               HorizontalAlignment="Center" Margin="0,10"/>

        <TextBlock Text="🔮 Введіть своє питання:" FontSize="18" 
                   Foreground="#6A5ACD" FontWeight="Bold"
                   TextAlignment="Center" HorizontalAlignment="Center"
                   Grid.Row="1" Margin="0,10"/>

        <TextBox x:Name="QuestionBox" Grid.Row="2"
                 FontSize="14" TextWrapping="Wrap"
                 Background="WhiteSmoke" BorderBrush="#6A5ACD"
                 Padding="8" BorderThickness="2"
                 HorizontalAlignment="Center"
                 MinWidth="250" MaxWidth="400" Width="Auto">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="BorderBrush" Value="#6A5ACD"/>
                    <Setter Property="Background" Value="WhiteSmoke"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#D8BFD8"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" Value="#9370DB"/>
                            <Setter Property="Background" Value="#E6E6FA"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Button Grid.Row="3" Content="Дізнатися відповідь"
                FontSize="16" FontWeight="Bold"
                Command="{Binding AskCommand}" Margin="10"
                Background="#FF8FBC8F" Foreground="#FF2E5A2E"
                MinWidth="200" MaxWidth="300"
                HorizontalAlignment="Center"
                BorderThickness="0" Padding="10">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#FF8FBC8F"/>
                    <Setter Property="Foreground" Value="#FF2E5A2E"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF8FBC8F"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#FF8FBC8F"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <TextBlock x:Name="ResponseText" Grid.Row="4" FontSize="20"
                   Foreground="#4B0082" FontWeight="Bold"
                   HorizontalAlignment="Center" TextAlignment="Center"
                   TextWrapping="Wrap" Margin="20,10,20,10"/>
    </Grid>
</Window>
