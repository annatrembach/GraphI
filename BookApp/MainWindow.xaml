<Window x:Class="BookApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Перегляд БД" Height="450" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Create" Click="CreateBook_Click"/>
            <Button Content="Update" Click="UpdateBook_Click"/>
            <Button Content="Delete" Click="DeleteBook_Click"/>
        </ToolBar>

        <StackPanel Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="ISBN:" Grid.Row="0" Grid.Column="0" Margin="5"/>
                <TextBox x:Name="ISBNTextBox" Grid.Row="0" Grid.Column="1" Margin="5" IsReadOnly="False"/>

                <TextBlock Text="Назва книги:" Grid.Row="1" Grid.Column="0" Margin="5"/>
                <TextBox x:Name="NameTextBox" Grid.Row="1" Grid.Column="1" Margin="5" IsReadOnly="False"/>

                <TextBlock Text="Автор:" Grid.Row="2" Grid.Column="0" Margin="5"/>
                <TextBox x:Name="AuthorTextBox" Grid.Row="2" Grid.Column="1" Margin="5" IsReadOnly="False"/>

                <TextBlock Text="Видавець:" Grid.Row="3" Grid.Column="0" Margin="5"/>
                <TextBox x:Name="PublisherTextBox" Grid.Row="3" Grid.Column="1" Margin="5" IsReadOnly="False"/>

                <TextBlock Text="Рік:" Grid.Row="4" Grid.Column="0" Margin="5"/>
                <TextBox x:Name="YearTextBox" Grid.Row="4" Grid.Column="1" Margin="5" IsReadOnly="False"/>
            </Grid>

            <ListBox x:Name="BooksListBox" DisplayMemberPath="Name" SelectionChanged="BooksListBox_SelectionChanged" Height="150" Margin="0,10,0,10">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="SpringGreen"/>
                        <Setter Property="Margin" Value="1"/>
                        <Setter Property="Padding" Value="5"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="BorderBrush" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <Button Content="Завантажити книги" Click="LoadBooks_Click" Height="30" Margin="0,10,0,10"/>
        </StackPanel>
    </DockPanel>
</Window>
